# ========================================
# データベース設定
# ========================================
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=kasa_blog_db
MYSQL_USER=kasa_user
MYSQL_PASSWORD=kasa_password

# ========================================
# バックエンド（FastAPI）設定
# ========================================
# SQLAlchemy用のデータベースURL
DATABASE_URL=mysql+pymysql://root:${MYSQL_ROOT_PASSWORD}@mysql:3306/${MYSQL_DATABASE}

# ========================================
# フロントエンド（Next.js）設定
# ========================================
# 開発環境用API URL（コンテナ間通信）
NEXT_PUBLIC_API_BASE_URL=http://kasa-blog-api:8000/api

# 本番環境用API URL（ブラウザからのアクセス）
# NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# ========================================
# ポート設定
# ========================================
FASTAPI_PORT=8000
MYSQL_PORT=3306
NEXT_DEV_PORT=3000
NEXT_PROD_PORT=3001
NGINX_PORT=80
